{
  "include": ["./src/**/*", "test/**/*", "themes", "uno.config.ts"],
  "exclude": ["node_modules", "dist"],

  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "jsxImportSource": "solid-js",
    "jsx": "preserve",
    "strict": true,

    "paths": {
      "~/*": ["./src/*"]
    },

    "esModuleInterop": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,

    "types": ["solid-start/env", "node", "@testing-library/jest-dom"]
  }
}
